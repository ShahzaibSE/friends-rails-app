<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold"><span><%= @friend.first_name %> </span>&nbsp<span><%= @friend.last_name %></span></h1>
      <p class="col-md-8 fs-4 fw-lighter"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
      <br/>
      <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %> 
      <%= link_to 'Destroy', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <%= link_to 'Back', friends_path, class: "btn btn-dark" %>
    </div>
  </div>
