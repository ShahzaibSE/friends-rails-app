<%if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark table-bordered">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Twitter</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <%if friend.user == current_user %>  
          <tr>
            <td>
              <%= link_to friend.first_name + " " + friend.last_name, friend %>
            </td>
            <td><%= friend.phone %></td>
            <td><%= friend.email %></td>
            <td><%= friend.twitter %></td>
            
            <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
            <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            
          </tr>
        <%end%>
      <% end %>
    </tbody>
  </table>
<% else %>
    <h1>Hello World</h1>
    <p>This is my first rail page!</p>
<% end  %>

<br>

<%= link_to 'New Friend', new_friend_path, class: "btn btn-secondary" %>
